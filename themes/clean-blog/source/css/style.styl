@import "base.styl"
@import "article.styl"

footerHeight = 165px
headerHeight = 80px
orange = #e45e1a

// Custom css

.site-heading
  visibility: hidden !important

.navbar-brand
  font-size: 50px !important
  color: orange !important
  font-family: font-assistant
  font-weight: bold

.post-heading
  color: #404040 !important
  padding: 75px 0 0 0 !important

.post-subheading
  font-weight: 300 !important

ul.nav.navbar-nav.navbar-right a
  color: white

.bg-main
  position: relative
  background-image: url('/img/about-betty-chang-photo.jpg')
  background-size: cover
  margin-top: 80px
  height: "calc(100vh - %s)" % (headerHeight + footerHeight)
  background-position: center
  background-repeat: no-repeat
  text-align: center

  .bg-text-name
    font-family: font-assistant
    font-size: 70px
    color: white

  .bg-text-intro
    text-align: center
    @extend .sans-serif
    font-size: 25px
    color: white
    position: absolute
    bottom: 0
    padding-bottom: 10px
    margin-left: auto
    margin-right: auto
    left: 0
    right: 0

    a
      font-weight: bold
      color: white
      text-decoration: none

    a:hover
      color: orange

@media screen and (max-width: 570px)
  .bg-text-name
    font-size: 50px !important

  .bg-text-intro
    font-size: 16px !important
    margin-top: 250px !important

.nav
  li
    a
      padding: 10px 20px !important

    a:hover
      color: orange !important

@media screen and (max-width: 767px)
  .bg-main
    margin-top: 60px

  .navbar-brand
    margin-top: 10px !important

footer
  padding: 30px 0 !important
  .row>div
    margin: auto

@media screen and (max-width: 767px)
  .navbar-brand
    margin: 0 !important

.navbar
  padding 10px 0

.navbar-right
  a
    margin-top: 10px
    font-size: 16px !important
    font-weight: bold

.intro-header
  margin-bottom: 10px

.blog
  margin-top: 70px

.social:hover
    color: orange !important

.social:focus
    color: orange !important

.post-preview
  a:hover
    color: orange !important
  a:focus
    color: orange !important

